{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "statbot" : {
      "type": "object",
      "title": "Stabot configuration",
      "properties": {
        "api" : {
          "type": "object",
          "title": "API configuration",
          "properties": {
            "env": {
              "type" : "object",
              "title" : "Database informations",
              "properties": {
                "DB_HOST" : {
                  "type" : "string",
                  "default" : "160.85.252.201",
                  "title": "Database host"
                },
                "DB_PORT" : {
                  "type" : "string",
                  "default" : "18001",
                  "title": "Database port"
                },
                "DB_SCHEMA" : {
                  "type" : "string",
                  "default" : "experiment",
                  "title": "Database schema"
                },
                "DB_DATABASE" : {
                  "type" : "string",
                  "default" : "postgres",
                  "title": "Database type"
                },
                "DB_USERNAME" : {
                  "type" : "string",
                  "default" : "",
                  "title": "Database username"
                },
                "DB_PASS" : {
                  "type" : "string",
                  "default" : "",
                  "render": "password",
                  "title": "Database password"
                }
              }
            }
          }
        },
        "ui" : {
          "type": "object",
          "title": "UI configuration",
          "properties": {
            "env": {
              "type" : "object",
              "title" : "UI Admin Mail informations (Deprecated)",
              "properties": {
                "ADMIN_MAIL" : {
                  "type" : "string",
                  "default" : "admin@example.com",
                  "description": "Deprecated",
                  "title": "Admin mail information"
                }
              }
            }
          }
        },
        "vllm" : {
          "type": "object",
          "title": "VLLM configuration",
          "properties": {
            "service": {
              "type": "object",
              "title": "Service configuration",
              "properties": {
                "image": {
                  "type": "object",
                  "title": "VLLM image configuration",
                  "properties": {
                    "version" : {
                      "type" : "string",
                      "default" : "vllm/vllm-openai:v0.8.2",
                      "title": "Vllm image version"
                    }
                  }
                }
              }
            },
            "huggingFace": {
              "type" : "object",
              "title" : "LLM token informations",
              "properties": {
                "hfToken" : {
                  "type" : "string",
                  "default" : "",
                  "render": "password",
                  "title": "Huggingface token"
                }
              }
            },
            "llm" : {
              "type" : "object",
              "title" : "LLM model arguments",
              "properties": {
                "model": {
                  "type" : "string",
                  "default" : "meta-llama/Llama-3.2-3B-Instruct",
                  "title": "Model name"
                }
              }
            }
          }
        }
      }
    }
  }
}
