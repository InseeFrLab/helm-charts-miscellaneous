{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "api" : {
      "type": "object",
      "title": "API configuration",
      "properties": {
        "env": {
          "type" : "object",
          "title" : "Database informations",
          "properties": {
            "DB_HOST" : {
              "type" : "string",
              "default" : "160.85.252.201",
              "description": "Database host adress",
              "title": "Database host"
            },
            "DB_PORT" : {
              "type" : "string",
              "default" : "18001",
              "description": "Database port name",
              "title": "Database port"
            },
            "DB_SCHEMA" : {
              "type" : "string",
              "default" : "experiment",
              "description": "Database schema",
              "title": "Database schema"
            },
            "DB_DATABASE" : {
              "type" : "string",
              "default" : "postgress",
              "description": "Database type",
              "title": "Database type"
            },
            "DB_USERNAME" : {
              "type" : "string",
              "default" : "",
              "description": "Database user username",
              "title": "Database username"
            },
            "DB_PASS" : {
              "type" : "string",
              "default" : "",
              "render": "password",
              "description": "Database user password",
              "title": "Database password"
            }
          }
        }
      }
    },
    "ui" : {
      "type": "object",
      "title": "UI configuration",
      "properties": {
        "env": {
          "type" : "object",
          "title" : "UI Admin Mail informations (Deprecated)",
          "properties": {
            "ADMIN_MAIL" : {
              "type" : "string",
              "default" : "admin@example.com",
              "description": "Deprecated",
              "title": "Admin mail information"
            }
          }
        }
      }
    },
    "vllm" : {
      "type": "object",
      "title": "VLLM configuration",
      "properties": {
        "deployment": {
          "type" : "object",
          "title" : "VLLM Deployment informations",
          "properties": {
            "hf_token" : {
              "type" : "string",
              "default" : "",
              "render": "password",
              "description": "Huggingface token",
              "title": "Huggingface token"
            },
            "args" : {
              "type" : "object",
              "title" : "LLM model arguments",
              "properties": {
                "model": {
                  "type" : "string",
                  "default" : "meta-llama/Llama-3.2-3B-Instruct",
                  "description": "LLM model name",
                  "title": "Model name"
                }
              }
            }
          }
        }
      }
    }
  }
}
