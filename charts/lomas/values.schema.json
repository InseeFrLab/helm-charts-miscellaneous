{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "fullnameOverride": {
            "description": "Fully overrides the lomas-server.fullname template.",
            "type": "string"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object",
                    "properties": {
                        "nginx.ingress.kubernetes.io/proxy-read-timeout": {
                            "type": "string"
                        }
                    }
                },
                "className": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "path": {
                                            "type": "string"
                                        },
                                        "pathType": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "tls": {
                    "type": "object",
                    "properties": {
                        "hosts": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "mongodb": {
            "description": "MongoDB database user configuration",
            "type": "object",
            "properties": {
                "architecture": {
                    "type": "string",
                    "description": "DB architecture",
                    "default": "standalone"
                },
                "auth": {
                    "type": "object",
                    "description": "Authentification parameters",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Add MongoDB to server",
                            "default": true
                        },
                        "rootUser": {
                            "type": "string",
                            "description": "MongoDB root user",
                            "default": "CHANGE ME"
                        },
                        "rootPassword": {
                            "type": "string",
                            "description": "MongoDB root password",
                            "default": "CHANGE ME"
                        },
                        "usernames": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "MongoDB usernames",
                            "default": "CHANGE ME"
                        },
                        "passwords": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "MongoDB user passwords",
                            "default": "CHANGE ME"
                        },
                        "databases": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "description": "Database name",
                            "default": ["defaultdb"]
                        }
                    }
                },
                "discoverable": {
                    "type": "object",
                    "properties": {
                        "allow": {
                            "type": "boolean",
                            "description": "Discoverable",
                            "default": true
                        }
                    }
                },
                "fullnameOverride": {
                    "type": "string",
                    "description": "fullnameOverride",
                    "default": "lomas-mongodb"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "tag": {
                            "type": "string",
                            "description": "Image tag",
                            "default": "6.0.9-debian-11-r5"
                        }
                    }
                },
                "persistence": {
                    "type": "object",
                    "properties": {
                        "resourcePolicy": {
                            "description": "Set this to 'keep' to disable data pvc deletion when uninstalling the chart. Subsequent installs will use the same pvc, restoring the state of the server. Note: if the runtime_args.settings.develop_mode is set to True, the server state will be reset (default datasets and budgets).",
                            "enum": [
                                "",
                                "keep"
                            ],
                            "type": "string",
                            "default": ""
                        }
                    }
                },
                "replicaCount": {
                    "type": "integer",
                    "description": "replicaCount",
                    "default": 1
                },
                "resources": {
                    "type": "object",
                    "description": "resources",
                    "default": {}
                },
                "security": {
                    "type": "object",
                    "properties": {
                        "networkPolicy": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Network policy enabled",
                                    "default": true
                                }
                            }
                        }
                    }
                }
            }
        },
        "nameOverride": {
            "description": "Partially overrides lomas-server.fullname template, keeping the version number.",
            "type": "string"
        },
        "nodeSelector": {
            "type": "object"
        },
        "podAnnotations": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object"
        },
        "replicaCount": {
            "type": "integer"
        },
        "resources": {
            "type": "object"
        },
        "runtime_args": {
            "type": "object",
            "properties": {
                "settings": {
                    "type": "object",
                    "properties": {
                        "dataset_store": {
                            "type": "object",
                            "properties": {
                                "ds_store_type": {
                                    "description": "The type of dataset store.",
                                    "enum": [
                                        "basic",
                                        "LRU_cache"
                                    ],
                                    "type": "string"
                                },
                                "max_memory_usage": {
                                    "description": "Max memory usage of dataset store. Only useful for LRU_cache type.",
                                    "type": "integer"
                                }
                            }
                        },
                        "develop_mode": {
                            "description": "When True, service database is reset to default user and dataset collections.",
                            "type": "boolean"
                        },
                        "submit_limit": {
                            "type": "integer"
                        },
                        "server": {
                            "type": "object",
                            "properties": {
                                "time_attack": {
                                    "type": "object",
                                    "properties": {
                                        "magnitude": {
                                            "type": "integer"
                                        },
                                        "method": {
                                            "enum": [
                                                "jitter",
                                                "stall"
                                            ],
                                            "type": "string"
                                        }
                                    }
                                },
                                "host_ip": {
                                    "type": "string"
                                },
                                "host_port": {
                                    "type": "int"
                                },
                                "log_level": {
                                    "enum": [
                                        "notset",
                                        "debug",
                                        "info",
                                        "warning",
                                        "error",
                                        "critical"
                                    ],
                                    "type": "string"
                                },
                                "reload": {
                                    "type": "boolean"
                                },
                                "workers": {
                                    "type": "int"
                                }
                            }
                        }
                    }
                }
            }
        },
        "securityContext": {
            "type": "object"
        },
        "service": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "tolerations": {
            "type": "array"
        }
    }
}